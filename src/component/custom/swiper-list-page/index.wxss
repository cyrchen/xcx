.swiper-list-page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.swiper-list-page .naver_bar {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  font-size: 30rpx;
  background: #fff;
  box-shadow: 1px 0px 5px #aaa;
}
.swiper-list-page .naver_bar view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: content-box;
  color: #333;
  flex: 1;
  position: relative;
}
.swiper-list-page .naver_bar .normal_item_active {
  color: #5140c9 !important;
}
.swiper-list-page .naver_bar .normal_item_active::after {
  content: ' ';
  position: absolute;
  left: 40%;
  right: 40%;
  bottom: 0;
  background: #5140c9;
  height: 8rpx;
  border-radius: 4rpx;
}
.swiper-list-page .naver_content {
  flex: 1;
}
.swiper-list-page .naver_content swiper {
  height: 100%;
}
.swiper-list-page .naver_content swiper swiper-item {
  position: relative;
}
.swiper-list-page .naver_content swiper swiper-item scroll-view {
  position: absolute;
  height: 100%;
}
.swiper-list-page .naver_content swiper swiper-item scroll-view view {
  height: 10em;
  border-bottom: 1px solid #3CC51F;
}
